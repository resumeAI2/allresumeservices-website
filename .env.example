# ============================================
# REQUIRED ENVIRONMENT VARIABLES
# ============================================

# Neon PostgreSQL Database Connection
# Get your connection string from: https://console.neon.tech
# Format: postgresql://user:password@host:port/database?sslmode=require
# SECURITY: Keep this secret! Never commit to version control
# PERFORMANCE: For better performance, use pooled connection:
#   postgresql://user:password@host:port/database?sslmode=require&pgbouncer=true&connection_limit=10
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# NextAuth.js Authentication Secret
# REQUIRED: Generate a secure random string
# Run: openssl rand -hex 32
# SECURITY: Must be at least 32 characters
AUTH_SECRET=your_auth_secret_here_must_be_32_chars_minimum

# Admin Email
# REQUIRED: User with this email automatically gets admin role
# SECURITY: Use a secure email you control
ADMIN_EMAIL=admin@allresumeservices.com

# Application Configuration
NODE_ENV=development
PORT=3000

# ============================================
# RECOMMENDED FOR PRODUCTION
# ============================================

# Cron Job Security
# RECOMMENDED: Protect cron endpoints from unauthorized access
# Run: openssl rand -hex 16
# Used by: /api/cron/backup and /api/cron/review-requests
CRON_SECRET=your_cron_secret_here_min_16_chars

# Email Service (ProtonMail SMTP)
# RECOMMENDED: Required for contact form notifications and order confirmations
# Get from: ProtonMail Bridge or ProtonMail SMTP settings
EMAIL_USER=info@allresumeservices.com
SMTP_PASSWORD=your_smtp_password_here
EMAIL_HOST=smtp.protonmail.ch
EMAIL_PORT=587

# Admin Notification Email
# Where to send contact form submissions and alerts
ADMIN_NOTIFICATION_EMAIL=admin@allresumeservices.com

# ============================================
# OPTIONAL: OAuth Providers
# ============================================

# Google OAuth (for "Sign in with Google")
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Setup: Create OAuth 2.0 Client ID, add authorized redirect URI:
#   https://your-domain.com/api/auth/callback/google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth (for "Sign in with GitHub")
# Get credentials from: https://github.com/settings/developers
# Setup: Create OAuth App, add callback URL:
#   https://your-domain.com/api/auth/callback/github
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# ============================================
# OPTIONAL: Payment Processing
# ============================================

# PayPal Integration
# Get credentials from: https://developer.paypal.com/dashboard/applications
# PAYPAL_MODE: Use 'sandbox' for testing, 'live' for production
# PAYPAL_WEBHOOK_ID: Get from PayPal developer dashboard after creating webhook
# SECURITY: Keep client secret secure
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id

# ============================================
# OPTIONAL: File Storage
# ============================================

# AWS S3 Storage (for file uploads)
# Get credentials from: https://console.aws.amazon.com/iam/
# SECURITY: Use IAM user with least privilege (S3 PutObject only)
# REGION: Use closest to your users (ap-southeast-2 for Australia)
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_S3_BUCKET=your_bucket_name

# ============================================
# OPTIONAL: Advanced Features
# ============================================

# Frontend Configuration
VITE_APP_TITLE=All Resume Services
VITE_APP_LOGO=/logo.svg

# Analytics (Umami, Plausible, etc.)
VITE_ANALYTICS_ENDPOINT=https://analytics.example.com
VITE_ANALYTICS_WEBSITE_ID=your_website_id

# Built-in Forge API (Custom AI features)
BUILT_IN_FORGE_API_URL=
BUILT_IN_FORGE_API_KEY=

# ============================================
# OPTIONAL: Development & Debugging
# ============================================

# Enable debug logging (shows all log levels)
DEBUG=false

# Sentry DSN (Error tracking in production)
# Get from: https://sentry.io/settings/projects/
# SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# ============================================
# SECURITY NOTES
# ============================================
# 
# 1. Never commit this file with real values to version control
# 2. Use .env.local for local development (already in .gitignore)
# 3. Set production values in Vercel dashboard or hosting provider
# 4. Rotate secrets regularly (every 90 days recommended)
# 5. Use different secrets for development and production
# 6. Keep CRON_SECRET, AUTH_SECRET, and database credentials secure
#
# ============================================
